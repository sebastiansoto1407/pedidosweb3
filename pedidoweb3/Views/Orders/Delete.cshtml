@model pedidoweb3.Models.Order
@{
    ViewData["Title"] = "Eliminar pedido";
}

<h1 class="text-danger">@ViewData["Title"] #@Model.Id</h1>
<p>Al eliminar este pedido, el stock se devolverá a los productos.</p>

<p><strong>Cliente:</strong> @Model.Cliente?.Nombre</p>
<p><strong>Fecha:</strong> @Model.Fecha.ToLocalTime()</p>
<p><strong>Total:</strong> @Model.Total.ToString("C")</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
