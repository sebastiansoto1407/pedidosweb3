@model pedidoweb3.Models.Product
@{
    ViewData["Title"] = "Detalles del producto";
}
<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3">Categoría</dt>
            <dd class="col-sm-9">@Model.Categoria</dd>

            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>
        </dl>

        <div class="d-flex gap-2">
            @if (User.IsInRole("admin") || User.IsInRole("empleado"))
            {
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            }
            <a class="btn btn-secondary" asp-action="Index">Volver</a>
        </div>
    </div>
</div>
